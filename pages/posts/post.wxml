<import src="post-item/post-item-template.wxml" />
<view>
	<swiper indicator-dots="true" autoplay="true" interval="5000">
		<swiper-item><image src="/images/wx.png"></image></swiper-item>
		<swiper-item><image src="/images/iqiyi.png"></image></swiper-item>
		<swiper-item><image src="/images/vr.png"></image></swiper-item>
	</swiper>
	<block wx:for="{{posts_key}}" wx:key="unique" wx:for-item="item" wx:for-index="idx">
    <!-- // template -->
    <view catchtap="onPostTap" data-postId="{{item.postId}}" data-post-name="name">
      <template is="postItem" data="{{...item}}" />
    </view>
	</block>
</view>